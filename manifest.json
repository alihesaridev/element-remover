{
  "manifest_version": 3,
  "name": "Element Remover",
  "version": "1.0.0",
  "description": "Remove elements from pages by class or selector",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "trash-icon.png",
      "48": "trash-icon.png",
      "128": "trash-icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "match_about_blank": true,
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "trash-icon.png",
    "48": "trash-icon.png",
    "128": "trash-icon-128.png"
  }
}

